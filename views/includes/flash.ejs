<% if(success && success.length){%>
<div class="row">
<div class="alert alert-success col-5 offset-4 mt-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close offset-8" data-bs-dismiss="alert" aria-label="close"></button>
</div>
</div>
<%}%>


<% if(error && error.length){%>
<div class="alert alert-danger col-5 offset-4 mt-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close offset-8" data-bs-dismiss="alert" aria-label="close"></button>
</div>
<%}%>